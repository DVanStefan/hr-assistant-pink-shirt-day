{
  "name": "hr-assistant-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for HR Assistant",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "firebase-admin": "^13.6.1",
    "firebase-functions": "^7.0.5",
    "openai": "^4.28.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "typescript": "^5.3.0"
  },
  "private": true
}
